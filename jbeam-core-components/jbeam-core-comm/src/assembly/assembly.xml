<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<includeSiteDirectory>true</includeSiteDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*:jar</include>
			</includes>
		</dependencySet>
	</dependencySets>

    <files>
       <file>
           <source>log4j.properties</source>
           <outputDirectory>/</outputDirectory>
       </file>
       <file>
           <source>poolconfig.xml</source>
           <outputDirectory>/</outputDirectory>
       </file>
    </files>
	
	<fileSets>
		<fileSet>
	       <directory>src/windows-services</directory>
	       <fileMode>744</fileMode>
	       <outputDirectory>/</outputDirectory>
	    </fileSet>
	    <fileSet>
	       <directory>src/shell-scripts</directory>
	       <fileMode>744</fileMode>
	       <outputDirectory>/</outputDirectory>
	    </fileSet>
	    <fileSet>
	       <directory>src/sql-scripts</directory>
	       <fileMode>744</fileMode>
	       <outputDirectory>sql-scripts</outputDirectory>
	    </fileSet>
	    <fileSet>
	       <directory>src/sql-server-scripts</directory>
	       <fileMode>744</fileMode>
	       <outputDirectory>sql-server-scripts</outputDirectory>
	    </fileSet>
		<fileSet>
			<directory>../jbeam-commons/target/</directory>
			<outputDirectory>lib/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>